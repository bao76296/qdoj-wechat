/* pages/checkin/checkin.wxss */
page{
  background-image: url(http://www.tsinghua.edu.cn/publish/thu2018/images/tbg.jpg);
  background-size: 100%;
  display: flex;
  flex-direction: column;
  height: 100%;
}
.heard--container{
  background: linear-gradient(90deg, #6510ad 60%, #104fad);
  padding-top:50rpx;
  height: 80rpx;
  font-size: 18px;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button--container{
  justify-self: center;
  background: rgba(0, 0, 0, 0.5);
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.button{
  
  width: 400rpx;
  height: 200rpx;
  background: tomato;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30px;
  color: white;
  border-radius: 30rpx;
}

.button text{
  font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
}