page{height:100%}
.container{
  /* width: 400rpx;
  height: 200rpx;
  background: tomato; */
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow : 1px 1px 10px rgb(216, 202, 200);
  overflow: hidden;
  position: relative;
}
.ripple {
    background-color: rgba(0, 0, 0, 0.6);
    border-radius: 100%;
    height:10px;
    width:10px;
    position: absolute;
    -webkit-transform: scale(0);
    overflow: hidden
}
@-webkit-keyframes ripple {
    100% {
    -webkit-transform: scale(45);
    transform: scale(45);
    background-color: transparent;
    }
}